<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"


    android:gravity="center"
    android:layout_margin="8dp"
    app:cardCornerRadius="6dp"
    app:cardElevation="4dp"


    android:orientation="vertical">
    <include layout="@layout/white_header" android:id="@+id/layhist"/>
<LinearLayout
    android:layout_width="fill_parent"
    android:orientation="vertical"
    android:layout_margin="2dp"

    android:gravity="center|right"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="6dp"
        android:weightSum="2"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="fill_parent"

            android:layout_height="wrap_content"
            android:layout_weight="1">
            <TextView

                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Req Id: #"
                android:gravity="center|left"
                android:fontFamily="@font/avn_bold"


                android:layout_alignParentBottom="true"

                android:textColor="@color/blackColor"
                android:textStyle="bold"
                android:padding="3dp"
                android:textSize="18dp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"

            android:gravity="center|right"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <TextView
                android:id="@+id/odrId"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Order Id:"
                android:gravity="center|left"
                android:fontFamily="@font/avn"


                android:layout_alignParentBottom="true"

                android:textColor="@color/blackColor"
                android:textStyle="bold"

                android:textSize="18dp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="6dp"
        android:weightSum="2"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="fill_parent"

            android:layout_height="wrap_content"
            android:layout_weight="1">
            <TextView

                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Custome Name: "
                android:gravity="center|left"
                android:fontFamily="@font/avn_bold"


                android:layout_alignParentBottom="true"

                android:textColor="@color/blackColor"
                android:textStyle="bold"

                android:textSize="18dp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"

            android:gravity="center|right"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <TextView

                android:id="@+id/cname"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Custome Name:"
                android:gravity="center|left"
                android:fontFamily="@font/avn"


                android:layout_alignParentBottom="true"

                android:textColor="@color/blackColor"
                android:textStyle="bold"

                android:textSize="18dp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="6dp"
        android:weightSum="2"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="fill_parent"

            android:layout_height="wrap_content"
            android:layout_weight="1">
            <TextView

                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Custome Mobile: "
                android:gravity="center|left"
                android:fontFamily="@font/avn_bold"


                android:layout_alignParentBottom="true"

                android:textColor="@color/blackColor"
                android:textStyle="bold"

                android:textSize="18dp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"

            android:gravity="center|right"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <TextView
                android:id="@+id/cmob"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Custome Mobile:"
                android:gravity="center|left"
                android:fontFamily="@font/avn"


                android:layout_alignParentBottom="true"

                android:textColor="@color/blackColor"
                android:textStyle="bold"

                android:textSize="18dp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="6dp"
        android:weightSum="2"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="fill_parent"

            android:layout_height="wrap_content"
            android:layout_weight="1">
            <TextView

                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Custome Address: "
                android:gravity="center|left"
                android:fontFamily="@font/avn_bold"


                android:layout_alignParentBottom="true"

                android:textColor="@color/blackColor"
                android:textStyle="bold"

                android:textSize="18dp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"

            android:gravity="center|right"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <TextView
                android:id="@+id/cadres"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Custome Address:"
                android:gravity="center|left"
                android:fontFamily="@font/avn"


                android:layout_alignParentBottom="true"

                android:textColor="@color/blackColor"
                android:textStyle="bold"

                android:textSize="18dp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="6dp"
        android:weightSum="2"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="fill_parent"

            android:layout_height="wrap_content"
            android:layout_weight="1">
            <TextView

                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Service Name: "
                android:gravity="center|left"
                android:fontFamily="@font/avn_bold"


                android:layout_alignParentBottom="true"
                android:paddingLeft="6dp"
                android:textColor="@color/blackColor"
                android:textStyle="bold"

                android:textSize="18dp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"

            android:gravity="center|right"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <TextView
                android:id="@+id/servicename"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Service Name:"
                android:gravity="center|left"
                android:fontFamily="@font/avn"


                android:layout_alignParentBottom="true"

                android:textColor="@color/blackColor"
                android:textStyle="bold"

                android:textSize="18dp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="6dp"
        android:weightSum="2"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="fill_parent"

            android:layout_height="wrap_content"
            android:layout_weight="1">
            <TextView

                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Professional Area: "
                android:gravity="center|left"
                android:fontFamily="@font/avn_bold"


                android:layout_alignParentBottom="true"

                android:textColor="@color/blackColor"
                android:textStyle="bold"

                android:textSize="18dp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"

            android:gravity="center|right"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <TextView
                android:id="@+id/pro_area_name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Professional Area:"
                android:gravity="center|left"
                android:fontFamily="@font/avn"


                android:layout_alignParentBottom="true"

                android:textColor="@color/blackColor"
                android:textStyle="bold"

                android:textSize="18dp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="6dp"
        android:weightSum="2"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="fill_parent"
            android:padding="10dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <TextView

                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Work Detail:"
                android:gravity="center|left"
                android:fontFamily="@font/avn_bold"


                android:layout_alignParentBottom="true"

                android:textColor="@color/blackColor"
                android:textStyle="bold"

                android:textSize="18dp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"

            android:gravity="center|right"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <TextView
                android:id="@+id/wrks"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Work Detail:"
                android:gravity="center|left"
                android:fontFamily="@font/avn"


                android:layout_alignParentBottom="true"

                android:textColor="@color/blackColor"
                android:textStyle="bold"

                android:textSize="18dp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="6dp"
        android:weightSum="2"
        android:orientation="horizontal">
        <LinearLayout
        android:layout_width="fill_parent"

        android:layout_height="wrap_content"
        android:layout_weight="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
android:padding="10dp"
                android:visibility="gone"
                android:background="@drawable/button"
                android:textColor="@color/whitecolor"
                android:text="Analysis Complete"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"

            android:gravity="center|right"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <TextView
                android:id="@+id/acceptBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button"
                android:fontFamily="@font/avn"
                android:padding="10dp"
                android:textColor="@color/whitecolor"
                android:text="+ Add Fault"/>
        </LinearLayout>
    </LinearLayout>






</LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:background="#C1C1C1"
        android:orientation="horizontal"
        android:weightSum="2"
        >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:layout_weight="0.4">
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Fault Name"

    android:textColor="@color/blackColor"/>
        </LinearLayout>
        <View
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:background="@color/blackColor"/>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:layout_weight="1.6">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Action"
                android:textColor="@color/blackColor"/>
        </LinearLayout>
    </LinearLayout>
<android.support.v7.widget.RecyclerView
    android:id="@+id/faultlist"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"/>
</LinearLayout>